<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 注册自定义的线程ID转换器 -->
    <conversionRule conversionWord="tid" 
                  converterClass="com.dh.framework.utils.ThreadIdConverter" />
                  
    <!-- 控制台输出 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %highlight(%-5level) %cyan(%logger{36}) - %msg%n</pattern>
<!--            <charset>UTF-8</charset>-->
        </encoder>
    </appender>

    <!-- 文件输出 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/dh-framework.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/dh-framework.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 框架日志 -->
    <logger name="com.dh.framework" level="DEBUG"/>
    <logger name="com.dh.demo" level="DEBUG"/>
    <!-- 其他日志降至WARN级别，减少干扰 -->
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.apache" level="WARN"/>

    <!-- 根日志级别 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration> 